{
  "name": "computerextra/api",
  "description": "REST API",
  "type": "project",
  "require": {
    "php": ">=8.2",
    "ext-pdo": "*",
    "visus/cuid2": "^1.0",
    "monolog/monolog": "^3.5",
    "robmorgan/phinx": "^0.14",
    "ramsey/uuid": "^4.0",
    "vlucas/phpdotenv": "^5.5",
    "zircote/swagger-php": "^4.0",
    "php-di/php-di": "^7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.49"
  },
  "autoload": {
    "psr-4": {
      "MyApi\\": "src/"
    }
  },
  "scripts": {
    "serve": "php -S localhost:8080 -t public",
    "migrate": "phinx migrate -c phinx.php -e development",
    "fix": "php-cs-fixer fix",
    "fix:check": "php-cs-fixer fix --dry-run --verbose"
  }
}
